{
  "version": "7.2",
  "data_api_version": "3.0",
  "routing_model": {
    "PRICE_FORM": ["PRICE_SUCCESS"],
    "PRICE_SUCCESS": []
  },
  "screens": [
    {
      "id": "PRICE_FORM",
      "title": "मूल्य अनुमान",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "form",
            "children": [
              {
                "type": "TextInput",
                "name": "full_name",
                "label": "पूरा नाम",
                "required": true,
                "input-type": "text",
                "max-length": 120,
                "error-message": "कृपया अपना नाम दर्ज करें"
              },
              {
                "type": "PhoneNumber",
                "name": "mobile",
                "label": "मोबाइल",
                "required": true,
                "error-message": "वैध मोबाइल नंबर दर्ज करें"
              },
              {
                "type": "TextArea",
                "name": "address",
                "label": "पता",
                "required": true,
                "max-length": 400
              },
              {
                "type": "TextInput",
                "name": "village",
                "label": "गांव/शहर",
                "required": true,
                "input-type": "text"
              },
              {
                "type": "NumberInput",
                "name": "avg_bill",
                "label": "औसत मासिक बिल (₹)",
                "required": true
              },
              {
                "type": "NumberInput",
                "name": "monthly_units",
                "label": "औसत मासिक यूनिट (kWh)",
                "required": true
              },
              {
                "type": "SingleSelect",
                "name": "phase",
                "label": "फेज",
                "required": true,
                "data-source": {
                  "type": "STATIC",
                  "data": [
                    { "id": "1p", "title": "1φ" },
                    { "id": "3p", "title": "3φ" }
                  ]
                }
              },
              {
                "type": "SingleSelect",
                "name": "roof_type",
                "label": "छत का प्रकार",
                "required": true,
                "data-source": {
                  "type": "STATIC",
                  "data": [
                    { "id": "rcc", "title": "RCC" },
                    { "id": "tin", "title": "टिन/शीट" },
                    { "id": "other", "title": "अन्य" }
                  ]
                }
              }
            ],
            "actions": {
              "submit": {
                "label": "जमा करें",
                "on-click-action": {
                  "name": "data_exchange",
                  "payload": {
                    "op": "submit_price_form",
                    "form": "${form}"
                  }
                }
              }
            }
          }
        ]
      }
    },
    {
      "id": "PRICE_SUCCESS",
      "title": "धन्यवाद!",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Description",
            "text": "आपका विवरण सहेजा गया है। हम जल्द ही अनुमान भेजेंगे।"
          }
        ]
      }
    }
  ]
}
